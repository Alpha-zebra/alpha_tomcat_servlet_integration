<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>alpha</servlet-name>
        <servlet-class>servlet.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>alpha</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addStudent</servlet-name>
        <servlet-class>servlet.AddStudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addStudent</servlet-name>
        <url-pattern>/student/addStudent.do</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>ListStudentServlet</servlet-name>
    <servlet-class>servlet.ListStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListStudentServlet</servlet-name>
        <url-pattern>/student/listStudent.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteStudentServlet</servlet-name>
        <servlet-class>servlet.DeleteStudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteStudentServlet</servlet-name>
        <url-pattern>/student/deleteStudent.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditStudentServlet</servlet-name>
        <servlet-class>servlet.EditStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditStudentServlet</servlet-name>
        <url-pattern>/student/editStudent.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateStudentServlet</servlet-name>
        <servlet-class>servlet.UpdateStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateStudentServlet</servlet-name>
        <url-pattern>/student/updateStudent.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>integration</servlet-name>
        <servlet-class>servlet.IntegrationStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>integration</servlet-name>
        <url-pattern>/integration/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>integration</servlet-name>
        <url-pattern>/integration/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>integration</servlet-name>
        <url-pattern>/integration/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>integration</servlet-name>
        <url-pattern>/integration/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>integration</servlet-name>
        <url-pattern>/integration/show</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>charset</filter-name>
        <filter-class>filter.CharsetFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>charset</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>